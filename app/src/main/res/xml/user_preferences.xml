<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        app:key="@string/preference_email_key"
        app:title="Change email"
        android:icon="@drawable/ic_email"
        app:summary="" />

    <Preference
        app:key="password"
        app:title="Reset password"
        android:icon="@drawable/ic_lock_outlined_closed"
        app:summary="••••••••" />

    <SwitchPreferenceCompat
        app:key="notifications"
        android:icon="@drawable/ic_notification_active"
        app:title="Push notifications" />

    <Preference
        app:key="logout"
        app:title="Log Out"
        android:icon="@drawable/ic_exit" />

</PreferenceScreen>
